rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // receiptsフォルダ内のファイルは誰でも読み書き可能（開発用）
    match /receipts/{allPaths=**} {
      allow read, write: if true;
    }
    
    // その他のファイルは読み取りのみ許可
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}

