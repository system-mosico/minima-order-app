rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ordersコレクションのルール
    match /orders/{orderId} {
      // 誰でも読み取り可能（店舗側で注文を確認するため）
      allow read: if true;
      // 誰でも書き込み可能（顧客が注文を送信するため）
      allow create: if true;
      // 更新と削除は認証が必要（将来的に店舗側のみが更新できるようにする）
      allow update, delete: if false;
    }
  }
}

