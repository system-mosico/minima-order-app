rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ordersコレクションのルール
    match /orders/{orderId} {
      // 読み取り：誰でも可能（Order側とAdmin側の両方で注文を確認するため）
      allow read: if true;
      
      // 作成：誰でも可能（Order側で注文を送信するため）
      allow create: if true;
      
      // 更新：誰でも可能（プロトタイプ段階）
      // Admin側でstatusなどのフィールドを更新するため
      // 本番環境では認証を追加して、Admin側のみ更新可能にすることを推奨
      // 例: allow update: if request.auth != null && request.auth.token.admin == true;
      allow update: if true;
      
      // 削除：誰でも可能（プロトタイプ段階）
      // Admin側で注文を削除するため
      // 本番環境では認証を追加して、Admin側のみ削除可能にすることを推奨
      // 例: allow delete: if request.auth != null && request.auth.token.admin == true;
      allow delete: if true;
    }
  }
}

